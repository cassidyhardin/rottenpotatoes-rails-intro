-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %a {params[:sort] == "title" ? {:class => "hilite"} : {}} link_to "Movie Title", movies_path(:sort => "title"), :id =>"title_header"
      %th Rating
      %a {params[:sort] == "release_date" ? {:class => "hilite"} : {}} link_to "Release Date", movies_path(:sort => "release_date"), :id =>"release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title onclick="title_sorted"('$param)
        %td= movie.rating
        %td= movie.release_date onclick="rating_sorted"($param)
        %td= link_to "More about #{movie.title}", movie_path(movie)


= link_to 'Add new movie', new_movie_path
