-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      <a id="title_header" href="/movies?sort=title" class="hilite" > Movie Title </a> 
      %th Rating
      <a id="release_date_header" href="/movies?sort=release_date" class="hilite" > Release Date </a> 
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title onclick="title_sorted"('$param)
        %td= movie.rating
        %td= movie.release_date onclick="rating_sorted"($param)
        %td= link_to "More about #{movie.title}", movie_path(movie)


= link_to 'Add new movie', new_movie_path
